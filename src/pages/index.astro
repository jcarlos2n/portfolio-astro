---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import GitHub from "../icons/GitHub.astro";
import SocialPill from "../icons/SocialPill.astro";
import Experience from "../components/Experience.astro";
---

<Layout
	title="Portfolio de jcarlos2n - Desarrollador y Programador web Full-stack"
>
	<main>
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<div class="flex flex-row gap-x-6">
				<img
					class="rounded-full size-12"
					src="https://avatars.githubusercontent.com/u/99401784?v=4"
					alt="jcarlos image"
				/>
				<h1
					class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4"
				>
					Hey, soy Jcarlos2n
					<a
						href="https://www.linkedin.com"
						target="_blank"
						rel="noopener"
						class="flex justify-center items-center"
					>
						<Badge>Disponible para trabajar</Badge>
					</a>
				</h1>
			</div>

			<h2 class="text-2xl opacity-80">
				+1 año de experiencia. Desarrollador Web, orientado Back-End con
				Conocimiento Full-Stack. De Málaga, España.
			</h2>

			<nav class="flex gap-x-4 mt-6">
				<SocialPill href="https://www.linkedin.com">
					<LinkedIn class="size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/jcarlos2n">
					<GitHub class="size-6" />
					GitHub
				</SocialPill>
			</nav>
		</section>

		<section>
			<Experience />
		</section>
	</main>
</Layout>
