---
import Layout from "../layouts/Layout.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import Experience from "../components/Experience.astro";
import AboutMe from "../components/AboutMe.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../icons/BriefCase.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portfolio de jcarlos2n - Desarrollador y Programador web Full-stack"
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-16">
			<Hero>
				<slot />
			</Hero>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center">
				<BriefCase class="size-8" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2
				class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
			>
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2
			  class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
			>
			  <ProfileCheck class="size-8" />
			  Sobre m√≠
			</h2>
			<AboutMe />
		  </SectionContainer>
	</main>
</Layout>
