---
import GitHub from "../icons/GitHub.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import SocialPill from "../icons/SocialPill.astro";
import Badge from "./Badge.astro";
---

<div max-w-xl>
    <div class="flex gap-4 mb-4">
        <img
            class="rounded-full size-12"
            src="https://avatars.githubusercontent.com/u/99401784?v=4"
            alt="jcarlos image"
        />
        <h1
            class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
        >
            Hey, soy Jcarlos2n
            <a
                href="https://www.linkedin.com"
                target="_blank"
                rel="noopener"
                class="flex justify-center items-center"
            >
                <Badge>Disponible para trabajar</Badge>
            </a>
        </h1>
    </div>

    <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        +1 año de experiencia. Desarrollador Web, orientado Back-End con
        Conocimiento Full-Stack. De Málaga, España.
    </h2>

    <nav class="flex gap-x-4 mt-6">
        <SocialPill href="https://www.linkedin.com">
            <LinkedIn class="size-6" />
            LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/jcarlos2n">
            <GitHub class="size-6" />
            GitHub
        </SocialPill>
    </nav>
</div>